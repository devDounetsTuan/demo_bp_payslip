extends layout
block content
  .row
    .col-md-8
      h1="Create Template"
      form.form-horizontal.well(method="post", action="/" encType="multipart/form-data")
        .form-group
          table.table.table-borderless
            thead.thead-dark
              tr
                th A
                th B
            tbody
              each item in ['C01' , 'C02' , 'C03','C04','C05']
                tr
                  td=item              
                  td 
                    select(name=item, id='')
                      each val in array
                        option(value=(val)) #{val}
        .form-group
          .col-sm-offset-2.col-sm-10
            input.btn.btn-default(type="submit", value="Create Template" onclick="javascript: form.action='/createtemplate';")